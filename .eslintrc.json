{
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"plugins": [
		"svelte3"
	],
	"extends": "airbnb-base",
	"overrides": [
		{
			"files": ["*.svelte"],
			"processor": "svelte3/svelte3"
		}
	],
	"rules": {
		"import/no-mutable-exports": "off",
		"import/prefer-default-export": "off",
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"import/first": "off",
		"import/no-unresolved": "off",
		"import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
		"linebreak-style": "off",
		"no-plusplus": "off",
		"no-tabs": "off",
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
