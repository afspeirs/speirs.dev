<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="theme-color" content="{{config.colour}}">
	<meta name="msapplication-navbutton-color" content="{{config.colour}}">
	<meta name="apple-mobile-web-app-status-bar-style" content="{{config.colour}}">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1">
	<title>AFSpeirs</title>
	<link rel="icon" type="image/ico" href="assets/img/global/favicon.ico" />
	<link rel="stylesheet" type="text/css" href="assets/css/pages/{{title}}.min.css">
</head>

<body>
	<div id="container" {{#ifEquals config.dev true}}class="debug"{{/ifEquals}}>
		{{> navigation}}

		{{{block "body"}}}

		<div id="footer">
			{{#block "foot"}}
				<p>&copy; Andy Speirs {{year}}</p>
			{{/block}}
		</div>
	</div>

	<script src="assets/js/modules/nav.{{#ifEquals config.dev false}}min.{{/ifEquals}}js"></script>
	{{#exists jsname}}
		<script src="assets/js/pages/{{jsname}}.{{#ifEquals config.dev false}}min.{{/ifEquals}}js"></script>
	{{/exists}}
</body>

</html>