<div class="watchface flip-container" id="flip-toggle">
	<div class="flipper">
		<div class="front">
			{{!--Add images for different pebbles to swap between (aplite/dorite, basalt, and chalk)--}}
			<img class="{{#if basalt}}rect{{else if chalk}}round{{else}}rect{{/if}}" data-screen src="assets/img/projects/pebble/{{title}}/{{#if basalt}}Basalt{{else if chalk}}Chalk{{else}}Aplite{{/if}}_1.png">
			<button id="flip-button"></button>
		</div>
		<div class="back">
			<h3>{{title}}</h3>
			<div style="text-align: center; line-height: 10px;">
				{{#if aplite}}<button class="watch" data-watch="Aplite" data-screen="rect">Aplite</button><br><br>{{/if}}
				{{#if basalt}}<button class="watch" data-watch="Basalt" data-screen="rect">Basalt</button><br><br>{{/if}}
				{{#if chalk}}<button class="watch" data-watch="Chalk" data-screen="round">Chalk</button>{{/if}}
			</div>

			<button id="flip-button"></button>
		</div>
	</div>
</div>