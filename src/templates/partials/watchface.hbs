<div class="watchface">
	<div class="flipper">
		<div class="front screenshot">
			<img
				class="{{#if basalt}}basalt{{else if chalk}}chalk{{else}}aplite{{/if}} jsonly"
				data-imgcount="{{#if basalt}}{{basalt}}{{else if chalk}}{{chalk}}{{else}}{{aplite}}{{/if}}"
				{{#if aplite}}data-aplite="{{aplite}}"{{/if}}
				{{#if basalt}}data-basalt="{{basalt}}"{{/if}}
				{{#if chalk}}data-chalk="{{chalk}}"{{/if}}
				src="assets/img/pages/projects/pebble/{{#simplify title}}{{/simplify}}/{{#if basalt}}basalt{{else if chalk}}chalk{{else}}aplite{{/if}}_1.png" alt="{{title}}"
			/>
			<div class="img-left jsonly"></div>
			<div class="img-right jsonly"></div>
		</div>
		<div class="back">
			<h3>{{title}}</h3>
			<div class="watchface-button">
				{{#if aplite}}<button class="watch" data-watch="Aplite" data-screen="rect">Aplite</button><br>{{/if}}
				{{#if basalt}}<button class="watch" data-watch="Basalt" data-screen="rect">Basalt</button><br>{{/if}}
				{{#if chalk}}<button class="watch" data-watch="Chalk" data-screen="round">Chalk</button><br>{{/if}}
			</div>
			<div class="links">
				{{#if store}}
					<a href="{{store}}" target="_blank" title="Store" rel="noopener">
						{{> svg-store}}
					</a>
				{{/if}}
				{{#if github}}
					<a href="{{github}}" target="_blank" title="Github" rel="noopener">
						{{> svg-github}}
					</a>
				{{/if}}
			</div>
		</div>
	</div>

	{{> svg-settings}}
</div>
