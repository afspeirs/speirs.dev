<div class="watchface">
	<div class="flipper">
		<div class="front">
			<img id="{{#if basalt}}basalt{{else if chalk}}chalk{{else}}aplite{{/if}}"
				{{#if aplite}}data-aplite="{{aplite}}"{{/if}}{{#if basalt}}data-basalt="{{basalt}}"{{/if}}{{#if chalk}}data-chalk="{{chalk}}"{{/if}} alt="{{title}}"
				src="assets/img/pages/projects/pebble/{{#trim title}}{{/trim}}/{{#if basalt}}Basalt{{else if chalk}}Chalk{{else}}Aplite{{/if}}_1.png">
			<div class="img-left"></div>
			<div class="img-right"></div>
		</div>
		<div class="back">
			<h3>{{title}}</h3>
			<div class="watchface-button">
				{{#if aplite}}<button class="watch" data-watch="Aplite" data-screen="rect">Aplite</button><br>{{/if}}
				{{#if basalt}}<button class="watch" data-watch="Basalt" data-screen="rect">Basalt</button><br>{{/if}}
				{{#if chalk}}<button class="watch" data-watch="Chalk" data-screen="round">Chalk</button><br>{{/if}}
			</div>
			<div class="links">
				{{#if store}}
					<a href="{{store}}" target="_blank" title="Store">
						{{> svg-store}}
					</a>
				{{/if}}
				{{#if source}}
					<a href="{{source}}" target="_blank" title="Github">
						{{> svg-source}}
					</a>
				{{/if}}
			</div>
		</div>
	</div>

	{{> svg-settings}}
</div>