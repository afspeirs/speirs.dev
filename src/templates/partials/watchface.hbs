<div class="watchface flip-container" id="flip-toggle">
	<div class="flipper">
		<div class="front">
			{{!--Add images for different pebbles to swap between (aplite/dorite, basalt, and chalk)--}}
			<img class="rect" data-screen src="assets/img/projects/pebble/{{title}}/Basalt_1.png">

			<button id="flip-button"></button>
		</div>
		<div class="back">
			<h3>{{title}}</h3>
			<div style="text-align: center; line-height: 10px;">
				<button class="watch" data-watch="Aplite" data-screen="rect">Aplite</button><br><br>
				<button class="watch" data-watch="Basalt" data-screen="rect">Basalt</button><br><br>
				<button class="watch" data-watch="Chalk" data-screen="round">Chalk</button>
			</div>

			<button id="flip-button"></button>
		</div>
	</div>
</div>