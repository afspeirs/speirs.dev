{
  "name": "speirs.dev",
  "version": "1.2.2-develop.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "start": "vite dev",
    "prebuild": "npm run semantic-release:dry",
    "build": "vite build",
    "preview": "vite preview",
    "pwa": "npm run build && npm run preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "type": "npm run check",
    "lint": "eslint .",
    "semantic-release:dry": "semantic-release --dry-run --no-ci",
    "outdated": "npx npm-check-updates",
    "outdated:minor": "npx npm-check-updates -t minor",
    "update": "npm run outdated -- -u",
    "update:minor": "npm run outdated:minor -- -u"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@fontsource-variable/work-sans": "^5.2.8",
    "@fontsource/mada": "^5.2.8",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.42.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "mdsvex": "^0.12.6",
    "semantic-release": "^24.2.9",
    "svelte": "^5.39.3",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6"
  }
}
