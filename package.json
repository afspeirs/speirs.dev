{
  "name": "speirs.dev",
  "version": "1.5.0-develop.5",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "start": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "pwa": "npm run build && npm run preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "type": "npm run check",
    "lint": "eslint .",
    "test": "start-server-and-test dev http://localhost:5173 test:e2e",
    "test:e2e": "cypress run",
    "test:open": "cypress open",
    "semantic-release:dry": "semantic-release --dry-run --no-ci",
    "outdated": "npx npm-check-updates",
    "outdated:minor": "npx npm-check-updates -t minor",
    "update": "npm run outdated -- -u",
    "update:minor": "npm run outdated:minor -- -u"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@fontsource-variable/work-sans": "^5.2.8",
    "@fontsource/mada": "^5.2.8",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.46.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.14",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.7.0",
    "cypress": "^15.4.0",
    "eslint": "^9.37.0",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "lucide-svelte": "^0.545.0",
    "mdsvex": "^0.12.6",
    "semantic-release": "^24.2.9",
    "start-server-and-test": "^2.1.2",
    "svelte": "^5.39.11",
    "svelte-check": "^4.3.3",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9"
  }
}
