{
  "name": "speirs.dev",
  "version": "0.5.0",
  "description": "A website to showcase projects created by AFSpeirs",
  "author": "AFSpeirs",
  "keywords": [
    "11ty",
    "eleventy",
    "parcel"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "ELEVENTY_ENV=production run-s build:*",
    "debug": "DEBUG=* npm start",
    "prestart": "npm run clean",
    "start": "ELEVENTY_ENV=development npm-run-all --parallel develop:*",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:tmp": "rimraf .tmp",
    "build:eleventy": "npx eleventy",
    "build:parcel": "parcel build .tmp/*.html --dist-dir dist --cache-dir .tmp/.parcel-cache",
    "develop:eleventy": "npx eleventy --serve --quiet",
    "develop:parcel": "parcel watch .tmp/*.html --dist-dir dist --cache-dir .tmp/.parcel-cache"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10"
  },
  "devDependencies": {
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/afspeirs/speirs.dev/"
  }
}
