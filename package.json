{
  "name": "speirs.dev",
  "version": "1.1.0-develop.3",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "start": "vite dev",
    "prebuild": "npm run semantic-release:dry",
    "build": "vite build",
    "preview": "vite preview",
    "pwa": "npm run build && npm run preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "semantic-release:dry": "semantic-release --dry-run --no-ci",
    "outdated": "npx npm-check-updates",
    "outdated:minor": "npx npm-check-updates -t minor",
    "update": "npm run outdated -- -u",
    "update:minor": "npm run outdated:minor -- -u"
  },
  "devDependencies": {
    "@fontsource-variable/work-sans": "^5.2.6",
    "@fontsource/mada": "^5.2.6",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^2.13.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.15.33",
    "eslint": "^9.29.0",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.15.0",
    "mdsvex": "^0.12.6",
    "semantic-release": "^24.2.5",
    "svelte": "^5.34.7",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^6.3.5"
  }
}
